<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xipherlabs.podcastr.PodcastDetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/base_thing"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_linearLayout"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:id="@+id/detail_image"/>
           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:id="@+id/detail_description"
                android:text="Description"
                style="?attr/textAppearanceListItem" />-->
            <com.xipherlabs.podcastr.ExpandableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_exp_desc"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                style="?attr/textAppearanceListItem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/textAppearanceListItemSmall"
                android:text="Available Episodes"
                android:padding="8dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/anchorThing"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_episodes">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_notfavorite"
        app:layout_anchor="@id/anchorThing"
        app:layout_anchorGravity="bottom|right|end"/>
    <!--    </ScrollView>-->

</android.support.design.widget.CoordinatorLayout>
